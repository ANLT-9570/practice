<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dg.main.dao.SaleMapper">
	
	<select id="selectCount" resultType="int">
		SELECT count(*) FROM mobileuse
		<where>
			<if test="search != null and search != '' " >
				<bind name="search" value="'%' + search + '%'"/>
				and token like #{search} 
			</if>
		</where>
	</select>
	
	
	<!-- 分页 -->
	<select id="selectPageAll" resultType="com.dg.main.Entity.users.MobileUser">
		select
		mobileUseId,
		phone,name,role,token
		from mobileuse
		where 1=1
		<if test="search != null and search != '' ">
			<bind name="search" value="'%' + search + '%'"/>
			and token like #{search} 
		</if>
		LIMIT #{limit} OFFSET ${offset}
	</select>
	
	
	
</mapper>
